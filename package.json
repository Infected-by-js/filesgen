{
  "name": "filesgen",
  "displayName": "FilesGen - Files Generator",
  "description": "VSCode extension to generate files from config file",
  "version": "0.0.1",
  "license": "MIT",
  "icon": "./icon.png",
  "repository": {
    "url": "https://github.com/Infected-by-js/filesgen-vscode",
    "type": "git"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "publisher": "InfectedByJs",
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "filesgen.generateFiles",
        "title": "Generate files from JSON",
        "category": "FilesGen",
        "group": "FilesGen",
        "icon": {
          "light": "./src/icon.svg",
          "dark": "./src/icon.svg"
        }
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "filesgen.generateFiles",
          "group": "FilesGen",
          "icon": {
            "light": "./src/icon.svg",
            "dark": "./src/icon.svg"
          }
        }
      ]
    },
    "configuration": [
      {
        "title": "File Generator Configuration",
        "properties": {
          "filesgen.config": {
            "type": [
              "object",
              "array"
            ],
            "default": {},
            "description": "File Generator Configuration"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "typescript": "^5.2.2"
  }
}
