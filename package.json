{
  "name": "filesgen",
  "displayName": "FilesGen - Files Generator",
  "description": "VSCode extension to generate files from config file",
  "version": "0.0.4",
  "license": "MIT",
  "icon": "./icon.png",
  "repository": {
    "url": "https://github.com/Infected-by-js/filesgen-vscode",
    "type": "git"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "publisher": "InfectedByJs",
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "filesgen.generateFiles",
        "title": "Generate files from JSON",
        "category": "FilesGen",
        "group": "FilesGen",
        "icon": {
          "light": "./icon.svg",
          "dark": "./icon.svg"
        }
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "filesgen.generateFiles",
          "group": "FilesGen",
          "icon": {
            "light": "./src/icon.svg",
            "dark": "./src/icon.svg"
          }
        }
      ]
    },
    "configuration": [
      {
        "title": "File Generator Configuration",
        "properties": {
          "filesgen.presets": {
            "type": [
              "array",
              "object"
            ],
            "default": [],
            "description": "Defines the structure of the generated files."
          }
        }
      },
      {
        "title": "Overwrite strategy",
        "properties": {
          "filesgen.overwriteStrategy": {
            "type": "string",
            "enum": [
              "force",
              "withConfirm",
              "none"
            ],
            "default": "withConfirm",
            "enumItemLabels": [
              "Force",
              "With Confirmation",
              "None"
            ],
            "enumDescriptions": [
              "To automatically overwrite existing files or folders without confirmation.",
              "To receive a confirmation dialog before overwriting existing files or folders.",
              "To avoid overwriting any existing files or folders during generation."
            ],
            "description": "Defines a rewrite strategy while generating files. This determines how the extension handles existing files or folders."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test:all": "yarn compile && vscode-test --recursive",
    "test:units": "yarn compile && mocha  out/test/units"
  },
  "devDependencies": {
    "@types/chai": "^4.3.10",
    "@types/chalk": "^2.2.0",
    "@types/mocha": "^10.0.4",
    "@types/node": "18.x",
    "@types/sinon": "^17.0.1",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.6",
    "chai": "^4.3.10",
    "chalk": "^4.1.2",
    "eslint": "^8.52.0",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {}
}
